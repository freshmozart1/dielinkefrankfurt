# Database Connection
# Neon PostgreSQL connection string
# Format: postgresql://user:password@endpoint/database?sslmode=require
DATABASE_URL="postgresql://user:password@ep-your-endpoint.region.aws.neon.tech/neondb?sslmode=require"

# Authentication
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Admin User
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your-admin-password"

# Vercel Blob Store - Required for file uploads
# Get these from the Vercel dashboard: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN="your-blob-read-write-token"

# Email Settings
# For local development with MailDev, use these settings:
# Run: npm run mail:dev (in a separate terminal)
# Visit: http://localhost:1080 to see sent emails
EMAIL_SERVER_HOST="localhost"
EMAIL_SERVER_PORT=1025
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
EMAIL_FROM="newsletter@die-linke-frankfurt.de"
TEST_EMAIL_RECIPIENT="buero@linke-frankfurt.de"

# For production, replace with your actual SMTP settings:
# EMAIL_SERVER_HOST="smtp.example.com"
