# Example env file for local development
# Copy this file to .env.local and fill in the values

# Database
# Comment this out to skip database operations during local builds
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# NextAuth
NEXTAUTH_SECRET=generate-a-random-secret-here
NEXTAUTH_URL=http://localhost:3000

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# Public variables (available in client-side code)
# Test email recipient for newsletter tests
NEXT_PUBLIC_TEST_EMAIL_RECIPIENT="buero@linke-frankfurt.de"

# Email configuration for newsletter sending
# For local development with MailDev
EMAIL_SERVER_HOST="localhost"
EMAIL_SERVER_PORT=1025
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
EMAIL_FROM="newsletter@die-linke-frankfurt.de"
TEST_EMAIL_RECIPIENT="buero@linke-frankfurt.de"